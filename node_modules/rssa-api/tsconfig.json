{
	"compilerOptions": {
		"target": "ES6",
		"module": "ESNext",
		"lib": ["DOM", "ES2017"],
		"jsx": "react",
		"declaration": true,
		"outDir": "dist",
		"rootDir": "src",
		"strict": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src/**/*"]
}